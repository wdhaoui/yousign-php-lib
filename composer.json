{
  "name": "wdhaoui/yousign-php-lib",
  "description": "Manage Yousign",
  "type": "library",
  "license": "proprietary",
  "autoload": {
    "psr-4": {
      "Wdhaoui\\Yousign\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Wdhaoui\Yousign\\": "tests"
    }
  },
  "require": {
    "php": "^7.2",
    "symfony/http-kernel": "^3.4 || ^4.1",
    "symfony/dependency-injection": "^3.4 || ^4.1",
    "symfony/monolog-bundle": "^3.1.0",
    "symfony/security-bundle": "^3.4 || ^4.1",
    "csa/guzzle-bundle": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.2"
  },
  "scripts": {
    "php-cs-fixer-fix": [
      "php-cs-fixer fix --using-cache=no --verbose --ansi"
    ],
    "php-cs-fixer-analyse": [
      "php-cs-fixer fix --dry-run --diff --using-cache=no --verbose --ansi"
    ]
  }
}
